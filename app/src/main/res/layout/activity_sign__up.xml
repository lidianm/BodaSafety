<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fire.sammy.com.bodasafety.Sign_Up">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:background="#44f5f0f0"
        android:textColorHint="#0b0002"
        android:padding="10dp"
        android:textSize="20dp"
        android:ems="10"
        android:id="@+id/id_email"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:text="Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="#0b0002"
        android:padding="10dp"
        android:ems="10"
        android:textSize="20dp"
        android:background="#44f5f0f0"
        android:id="@+id/id_email"
        android:layout_below="@+id/id_email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColorHint="#0b0002"
        android:ems="10"
        android:hint="Password"
        android:padding="10dp"
        android:textSize="20dp"
        android:background="#44f5f0f0"
        android:id="@+id/id_password"
        android:layout_above="@+id/btn_signin"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign UP"
        android:textColor="#0b0002"
        android:id="@+id/btn_signin"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_below="@+id/btn_signin"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:background="#44f5f0f0"
        android:textColorHint="#0b0002"
        android:padding="10dp"
        android:textSize="20dp"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="62dp"
        android:text="Name"
        android:layout_below="@+id/id_email"
        android:layout_alignEnd="@+id/btn_signin" />


</RelativeLayout>

